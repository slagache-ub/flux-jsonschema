{
  "allOf": [
    {
      "if": {
        "properties": {
          "apiVersion": {
            "pattern": "^.*v1$"
          },
          "kind": {
            "const": "Kustomization"
          }
        }
      },
      "then": {
        "$ref": "./kustomization_v1.json"
      }
    },
    {
      "if": {
        "properties": {
          "apiVersion": {
            "pattern": "^.*v1beta2$"
          },
          "kind": {
            "const": "Kustomization"
          }
        }
      },
      "then": {
        "$ref": "./kustomization_v1beta2.json"
      }
    }
  ]
}